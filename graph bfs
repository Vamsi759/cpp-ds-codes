#include<iostream>
#include<list>
#include<bits/stdc++.h>
using namespace std;
class graph{
    public:
    int v;
    list<int>*l;
    graph(int x){
        v=x;
        l=new list<int>[v];
    }
    ////// some mistake in that right;
    void add(int a,int b){
        l[a].push_back(b);
        l[b].push_back(a);
    }
    void print(){
        for(int i=0;i<v;i++){
            cout<<i<<"-->";
            for(auto j:l[i])cout<<j<<" ";
            cout<<endl;
        }
    }
    void bfs(int b){
        
        queue<int>p;
        p.push(b);
        bool *n=new bool[v]{0};
        n[b]=true;
        while(!p.empty()){
            
            int a=p.front();
            p.pop();
            cout<<a<<" ";
            for(auto i:l[a]){
                
                if(n[i]==0){
                   // cout<<i<<" ";
                    p.push(i);
                n[i]=1;
                    
                }
            }
        }
    }
    
};
int main(){
    
    graph g(7);
    vector<int>p={0,1, 1,2, 2,3, 3,5, 5,6, 4,5, 0,4, 3,4};
    for(int i=0;i<p.size();i+=2){
        g.add(p[i],p[i+1]);
    }
    g.print();
    g.bfs(1);
    
}
